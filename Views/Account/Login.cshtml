@model LoginViewModel

@{
    ViewData["Title"] = "Login Page";
    var returnUrl = ViewBag.ReturnUrl ?? "/";
}

<div>Login</div>

<div class="main-content-wrap section-ptb lagin-and-register-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 m-auto">
                <div class="login-register-wrapper">
                    <!-- login-register-tab-list start -->
                    <div class="login-register-tab-list nav">
                        <a asp-controller="Account" asp-action="Register">
                            <h4> Register </h4>
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="active" data-bs-toggle="tab">
                            <h4> Login </h4>
                        </a>
                    </div>
                    <!-- login-register-tab-list end -->

                        <div id="lg2" class="tab-pane">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <div asp-validation-summary="All"></div>
                                    <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@returnUrl" method="post">
                                        <div class="login-input-box">
                                            <input asp-for="Email" placeholder="Email">
                                            <input asp-for="Password" placeholder="Password">
                                        </div>
                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <input asp-for="RememberMe" type="checkbox">
                                                <label>Remember me</label>
                                                <a asp-action="" asp-controller="">Forgot Password?</a>
                                            </div>
                                           
                                        </div>
                                        <div class="button-box">
                                            <button class="login-btn btn" type="submit"><span>Login</span></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

